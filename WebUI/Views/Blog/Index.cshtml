@model IEnumerable<Blog>

@{
    ViewData["Title"] = "Blogs";
}

<div class="row mt-5">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <h1 class="h2">
            All Blogs
        </h1>
    </div>
    <div class="col-md-2"></div>
</div>


@if(Model.Any())
        {
            @foreach(var blog in Model)
            {
                <div class="row mt-2">
                    <div class="col-md-2"></div>
                    <div class="col-md-8">
        
                        <div class="card">
                            <div class="card-body">
                                <div class="card-title">@blog.Title</div>
                                <img src="~/images/women working at cafe.jpg" class="card-img-top img-thumbnail"/>
                                <div class="card-text text-truncate">@blog.Content</div>
                            </div>
                            <div class="card-footer">
                                <a class="btn btn-primary" asp-action="Article" asp-controller="Blog" asp-route-id="@blog.Id">Read More</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2"></div>
                </div>
            }
        }
        else
        {
            <h2>Woah! Feel so empty here</h2>
        }
    