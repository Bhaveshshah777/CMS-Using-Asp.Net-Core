@model NewBlogViewModel

@{
    ViewData["Title"] = "Create New Blog Post";
}


<div class="row mt-2">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <h3>Add New Post</h3>
        <strong>Note: Make sure that title is 100 char long</strong>
    </div>
    <div class="col-md-2"></div>
</div>

<div class="row mt-2">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="All"></div>
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <div class="form-group">
                    <strong><label asp-for="Title" class="form-control-label mb-2"></label></strong>
                    <input asp-for="Title" class="form-control"/>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <strong><label asp-for="Content" class="form-control-label mb-2"></label></strong>
                    <textarea asp-for="Content" rows="6" class="form-control"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <div class="form-group mt-2">
                    <button type="submit" class="btn btn-primary" style="margin:1px">Add Post</button>
                    <a class="btn btn-secondary" asp-action="Index" asp-controller="Administration">Cancel</a>
                </div>

            </div>
            <div class="col-md-2"></div>
        </form>
    </div>
</div>