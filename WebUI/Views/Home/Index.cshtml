@model HomeIndexViewModel

@{
    ViewData["Title"] = "Home Page";
}

@*Heading Carousel*@
<div id="headingSlide" class="carousel slide" data-bs-ride="carousel">


    @*Carousel Dots*@
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#headingSlide" data-bs-slide-to="0" class="active"></button>
        <button type="button" data-bs-target="#headingSlide" data-bs-slide-to="1" ></button>
        <button type="button" data-bs-target="#headingSlide" data-bs-slide-to="2" ></button>
    </div>


    @*Heading Slide*@
    <div class="carousel-inner">


        <div class="carousel-item active">
            <img src="~/images/car1.jpg" alt="car1" class="d-block w-100"/>
            <div class="carousel-caption text-start">
                <h3>ELIT FUSCE VEL SAPIEN ELIT IN MALESUADA.</h3>
            </div>
        </div>


        <div class="carousel-item">
            <img src="~/images/car2.jpg" alt="car2" class="d-block w-100"/>
        </div>


        <div class="carousel-item">
            <img src="~/images/car3.jpg" alt="car3" class="d-block w-100"/>
        </div>
    </div>
    

    @*Right Left Arrow*@
    <button class="carousel-control-prev" type="button" data-bs-target="#headingSlide" data-bs-slide="prev">
        <span class=carousel-control-prev-icon></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#headingSlide" data-bs-slide="next">
        <span class=carousel-control-next-icon></span>
    </button>
</div>

