@*Recent Blogs*@
<div class="row mt-5">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <h3 class="mb-5 text-center">Recent <strong>Blogs</strong></h3>
        <p>Ut fusce varius nisl ac gravida vel pretium tellus tincidunt integer eu augue augue nunc elit dolor, luctus placerat.</p>
        <div class="row mt-3">
            @if(Model.Blogs.Any())
            {
                @foreach(var blog in Model.Blogs)
                {
                    <div class="card m-3 col-md-3">
                        <div class="card-header">
                            <div class="card-title">@blog.Title</div>
                        </div>

                        <div class="card-body text-truncate">
                            <p>@blog.Content</p>
                        </div>

                        <div class="card-footer">
                            <a class="btn btn-primary" asp-action="Article" asp-controller="Blog" asp-route-id="@blog.Id">View</a>
                        </div>
                    </div>
                }
            }
            else
            {
               <p><em>No articles yet</em></p>
            }
        </div>
        <div class="row mt-3">
            <div class="col-md-5"></div>
            <div class="col-md-2">
                <a class="btn btn-outline-warning">View All</a>
            </div>
            <div class="col-md-5"></div>
            
        </div>
    </div>
    <div class="col-md-2"></div>
</div>


